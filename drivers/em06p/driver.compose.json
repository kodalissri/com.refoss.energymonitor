{
  "name": {
    "en": "Refoss EM06P (6-Channel)"
  },
  "class": "sensor",
  "capabilities": [
    "measure_voltage",
    "measure_current",
    "measure_power",
    "measure_apparent_power",
    "measure_power_factor",
    "meter_power_day",
    "meter_power_week",
    "meter_power",
    "meter_power.exported",
    "meter_cost_day",
    "measure_temperature"
  ],
  "capabilitiesOptions": {
    "measure_power": {
      "title": { "en": "Total Power" },
      "units": { "en": "W" },
      "decimals": 1
    },
    "meter_power": {
      "title": { "en": "Total Energy (Month)" },
      "units": { "en": "kWh" },
      "decimals": 3
    },
    "meter_power.exported": {
      "title": { "en": "Total Exported Energy (Month)" },
      "decimals": 3
    },
    "measure_voltage": {
      "title": { "en": "Voltage (A1)" },
      "units": { "en": "V" },
      "decimals": 1
    },
    "measure_current": {
      "title": { "en": "Total Current" },
      "units": { "en": "A" },
      "decimals": 2
    },
    "measure_apparent_power": {
      "title": { "en": "Total Apparent Power" },
      "units": { "en": "VA" },
      "decimals": 1
    },
    "measure_power_factor": {
      "title": { "en": "Power Factor (A1)" },
      "units": { "en": "PF" },
      "decimals": 2
    },
    "meter_power_week": {
      "title": { "en": "Total Energy (Week)" },
      "units": { "en": "kWh" },
      "decimals": 3
    },
    "meter_power_day": {
      "title": { "en": "Total Energy (Today)" },
      "units": { "en": "kWh" },
      "decimals": 3
    }
  },
  "energy": {
    "cumulative": true,
    "cumulativeImportedCapability": "meter_power",
    "cumulativeExportedCapability": "meter_power.exported"
  },
  "platforms": ["local"],
  "connectivity": ["lan"],
  "images": {
    "small": "/drivers/em06p/assets/images/small.png",
    "large": "/drivers/em06p/assets/images/large.png"
  },
  "pair": [
    {
      "id": "enter_ip"
    },
    {
      "id": "add_devices"
    }
  ],
  "settings": [
    {
      "id": "ip_address",
      "type": "text",
      "label": { "en": "Device IP Address" },
      "value": ""
    },
    {
      "id": "username",
      "type": "text",
      "label": { "en": "Username (if password protected)" },
      "value": ""
    },
    {
      "id": "password",
      "type": "password",
      "label": { "en": "Password (if password protected)" },
      "value": ""
    },
    {
      "id": "poll_interval",
      "type": "number",
      "label": { "en": "Poll Interval (seconds)" },
      "value": 10,
      "min": 5,
      "max": 300
    },
    {
      "id": "electricity_price",
      "type": "number",
      "label": { "en": "Electricity Price (per kWh)" },
      "hint": { "en": "Used to calculate daily cost on each circuit. Set to 0 to disable cost display." },
      "value": 0,
      "min": 0,
      "max": 10,
      "step": 0.001
    },
    {
      "id": "currency",
      "type": "dropdown",
      "label": { "en": "Currency" },
      "value": "EUR",
      "values": [
        { "id": "EUR", "label": { "en": "Euro (€)" } },
        { "id": "USD", "label": { "en": "US Dollar ($)" } },
        { "id": "GBP", "label": { "en": "British Pound (£)" } },
        { "id": "AUD", "label": { "en": "Australian Dollar (A$)" } },
        { "id": "CAD", "label": { "en": "Canadian Dollar (C$)" } },
        { "id": "SEK", "label": { "en": "Swedish Krona (kr)" } },
        { "id": "NOK", "label": { "en": "Norwegian Krone (kr)" } },
        { "id": "DKK", "label": { "en": "Danish Krone (kr)" } },
        { "id": "CHF", "label": { "en": "Swiss Franc (CHF)" } },
        { "id": "JPY", "label": { "en": "Japanese Yen (¥)" } }
      ]
    },
    {
      "id": "include_in_widget",
      "type": "checkbox",
      "label": { "en": "Include In Energy Summary Widget" },
      "hint": { "en": "If disabled, this device will be hidden from the Energy Summary widget." },
      "value": true
    }
  ]
}
