{
  "id": "measure_power_below",
  "title": {
    "en": "Power drops below"
  },
  "titleFormatted": {
    "en": "Power drops below [[threshold]] W"
  },
  "args": [
    {
      "name": "device",
      "type": "device",
      "filter": "driver_id=em01p|em06p|em16p|em_channel"
    },
    {
      "name": "threshold",
      "type": "number",
      "min": 0,
      "step": 1,
      "placeholder": {
        "en": "Watts"
      },
      "title": {
        "en": "Value"
      }
    }
  ],
  "tokens": [
    {
      "name": "power",
      "type": "number",
      "title": {
        "en": "Power (W)"
      },
      "example": 50
    }
  ]
}
