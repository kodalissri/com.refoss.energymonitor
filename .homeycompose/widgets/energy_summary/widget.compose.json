  },
  "images": {
    "small": "./assets/preview-light.png",
    "large": "./assets/preview-dark.png"
  },
  "size": {
    "columns": 2,
    "rows": 2
  },
  "settings": [
    {
      "id": "period",
      "type": "dropdown",
      "label": { "en": "Period" },
      "value": "day",
      "values": [
        { "id": "day", "label": { "en": "Today" } },
        { "id": "week", "label": { "en": "This Week" } },
        { "id": "month", "label": { "en": "This Month" } }
      ]
    }
  ],
  "api": {
    "getEnergy": {
      "method": "GET",
      "path": "/energy"
    }
  }
}
